<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/black">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black">

        <Button
            style="@style/cmdButton"
            android:id="@+id/buttonReset"
            android:text="@string/buttonReset"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            style="@style/cmdButton"
            android:id="@+id/buttonDelete"
            android:text="@string/buttonDelete"
            android:layout_row="0"
            android:layout_column="1"
            />


        <Button
            style="@style/cmdButton"
            android:id="@+id/buttonPercent"
            android:text="@string/buttonPercent"
            android:layout_row="0"
            android:layout_column="2"
            />

        <Button
            style="@style/cmdButton"
            android:id="@+id/buttonShares"
            android:text="@string/buttonShares"
            android:layout_row="0"
            android:layout_column="3"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button9"
            android:text="@string/button9"
            android:layout_row="1"
            android:layout_column="0"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button8"
            android:text="@string/button8"
            android:layout_row="1"
            android:layout_column="1"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button7"
            android:text="@string/button7"
            android:layout_row="1"
            android:layout_column="2"
            />

        <Button
            style="@style/cmdButton"
            android:id="@+id/buttonMultiply"
            android:text="@string/buttonMultiply"
            android:layout_row="1"
            android:layout_column="3"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button6"
            android:text="@string/button6"
            android:layout_row="2"
            android:layout_column="0"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button5"
            android:text="@string/button5"
            android:layout_row="2"
            android:layout_column="1"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button4"
            android:text="@string/button4"
            android:layout_row="2"
            android:layout_column="2"
            />

        <Button
            style="@style/cmdButton"
            android:id="@+id/buttonMinus"
            android:text="@string/buttonMinus"
            android:layout_row="2"
            android:layout_column="3"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button3"
            android:text="@string/button3"
            android:layout_row="3"
            android:layout_column="0"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button2"
            android:text="@string/button2"
            android:layout_row="3"
            android:layout_column="1"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button1"
            android:text="@string/button1"
            android:layout_row="3"
            android:layout_column="2"
            />

        <Button
            style="@style/cmdButton"
            android:id="@+id/buttonPlus"
            android:text="@string/buttonPlus"
            android:layout_row="3"
            android:layout_column="3"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/buttonPoint"
            android:text="@string/buttonPoint"
            android:layout_row="4"
            android:layout_column="2"
            />

        <Button
            style="@style/numberButton"
            android:id="@+id/button0"
            android:text="@string/button0"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="2"
            android:background="@color/brightOrange"
            android:text="@string/buttonEquals"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_margin="1dp"/>


    </GridLayout>

</LinearLayout>